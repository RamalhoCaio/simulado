// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

model Paciente {
  id_paciente String @unique @default(uuid())
  nome        String
  senha       Int @unique
  usuario     String
}

model Secretaria {
  Nome        String
  RG          Int @unique
  consulta    Consulta[] @relation("consulta", fields: [RG], references: [rg_secretaria])
}

model Consulta {
  id          Int @unique
  data        DateTime
  nome_pcte   String  @relation("pct", fields: [id_paciente], references: [id_paciente])
  id_paciente String 
  senha_consulta Int
  nome_dent   String
  rg_secretaria Int
}

model Agenda {
  data        DateTime @unique
  nomePcte    String
}
